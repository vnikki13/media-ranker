<section class='spotlight'>
  <% if @spotlight.nil? %>
    <h2 class='spotlight__header'>
      No Media to show
    </h2>
  <% else %>
    <h2 class='spotlight__header'>
      <span class='spotlight__header--prefix'>
        Media Spotlight:
      </span>
      <%= link_to @spotlight.title, work_path(@spotlight), class: 'spotlight__link-to' %> by 
      <%= @spotlight.creator %>
    </h2>
    <p class='spotlight__description'>
      <%= @spotlight.votes.count %> votes - 
      <%= @spotlight.description %>
    </p>
  <% end %>
</section>

<hr class='root__hr'>

<section class='top-ten__container'>
  <section class='top-ten_list-container'>
    <h2 class='top-ten__header'>
      Top Movies
    </h2> 
    <ul class='list-group top-ten__list'>
      <% @top_movies.each do |work| %>
      <li class='list-group-item'>
        <h4>
          <%= link_to work.title, work_path(work) %>
          <small class='top-ten__creator'>
            by <%= work.creator %>
          </small>
        </h4> 
        <p><%= work.votes.count %> votes</p>
      </li>
      <% end %>
    </ul>
  </section>


  <section class='top-ten_list-container'>
    <h2 class='top-ten__header'>
      Top Books
    </h2> 
    <ul class='list-group top-ten__list'>
      <% @top_books.each do |work| %>
      <li class='list-group-item'>
        <h4>
          <%= link_to work.title, work_path(work) %>
          <small class='top-ten__creator'>
            by <%= work.creator %>
          </small>
        </h4> 
        <p><%= work.votes.count %> votes</p>
      </li>
      <% end %>
    </ul>
  </section>


  <section class='top-ten_list-container'>
    <h2 class='top-ten__header'>
      Top Albums
    </h2> 
    <ul class='list-group top-ten__list'>
      <% @top_albums.each do |work| %>
      <li class='list-group-item'>
        <h4>
          <%= link_to work.title, work_path(work) %>
          <small class='top-ten__creator'>
            by <%= work.creator %>
          </small>
        </h4> 
        <p><%= work.votes.count %> votes</p>
      </li>
      <% end %>
    </ul>
  </section>
</section>
