<h2>User Summary: <%= link_to @user.username, user_path(@user)%></h2>
<p>Joined site <%= @user.joined %></p>

<section class='user-votes__container'>
  <h3 class='user-votes__header'>Votes</h3>
  <table class='table'>
    <thead>
      <tr>
        <th>Media Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Category</th>
        <th>Voted On</th>
      </tr>
    </thead>
    <% @user.works.each do |work| %>
    </tbody>
      <tr>
        <td><%= link_to work.title, work_path(work) %></td>
        <td><%= work.creator %></td>
        <td><%= work.publication_year %></td>
        <td><%= work.category %></td>
        <td><%= Vote.find_by(work_id: work).voted_on %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</section>

<%= link_to "See all Users", users_path, class:'btn btn-secondary' %>
<%= link_to "Back to Media List", works_path, class:'btn btn-primary' %>